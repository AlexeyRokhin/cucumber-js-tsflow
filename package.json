{
  "private": true,
  "name": "cucumber-tsflow-workspace",
  "description": "Workspace for cucumber-tsflow",
  "version": "2.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/timjroberts/cucumber-js-tsflow.git"
  },
  "scripts": {
    "build": "tsc --build",
    "build:watch": "tsc --build --watch",
    "postinstall": "lerna bootstrap",
    "precommit": "lint-staged && npm test",
    "test": "npm run test:code && npm run test:bdd",
    "test:code": "jest",
    "pretest:bdd": "npm run build",
    "test:bdd": "cucumber-js --require cucumber-tsflow-specs/dist cucumber-tsflow-specs"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "tslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/callsite": "^1.0.30",
    "@types/cucumber": "^4.0.4",
    "@types/jest": "^23.3.10",
    "@types/node": "10.7.1",
    "@types/underscore": "1.8.8",
    "cucumber": "^5.0.2",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "lint-staged": "^8.0.4",
    "prettier": "^1.15.2",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "typescript": "^3.1.6"
  }
}
